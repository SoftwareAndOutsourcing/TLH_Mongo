      <form id="inputForm" action="/input1" name="inputForm" method="POST"
        class="inner-outer-container py-4 needs-validation"
        onSubmit="return validate()" novalidate>
        <div class="text-center">
          <!-- CLIENT INFO (SECTION 1 OF 4) -->
          <div class="card-body p-5 text-center"
            style="background-color: #00bdb0;">
            <!-- Row 1 -->
            <div class="row">
              <div class="col-lg-12 py-2">
                <h4 class="input-section" id="client-info">Client Info</h4>
                <div class="row g-2">
                  <div class="col-lg-4 col-md-6">
                    <div class="form-floating">
                      <input type="text" class="form-control"
                        id="floatingInputGrid" name="jobName" placeholder=""
                        value="" required>
                      <label for="floatingInputGrid">Job Name</label>
                      <div class="invalid-feedback">
                        Please add a Job Name
                      </div>
                    </div>
                  </div>

                  <div class="col-lg-4 col-md-6">
                    <%- include ('partials/dropdown', { options:
                      marketArray.map(m=> {
                      return { name: m.market_name, value: m.market_name }
                      }),
                      name: "market",
                      label: "Market"
                      }) -%>
                  </div>


                  <div class="col-lg-4 col-md-6">
                    <%- include ('partials/dropdown', { options:
                      serviceArray.map(m=> {
                      return { name: m.services_name, value: m.services_id }
                      }),
                      name: "services",
                      label: "Services"
                      }) -%>
                  </div>
                </div>
              </div>
            </div>
            <!-- Row 2  -->
            <div class="row">
              <div class="col-lg-12 py-1">
                <div class="row g-2">
                  <div class="col-lg-5 col-md-6">
                    <div class="form-floating">
                      <input type="text" class="form-control"
                        id="floatingInputGrid" name="clientName" placeholder=""
                        value="" required>
                      <label for="floatingInputGrid">Client Name</label>
                      <div class="invalid-feedback">
                        Please enter a client name
                      </div>
                    </div>
                  </div>

                  <div class="col-lg-4 col-md-6">
                    <div class="form-floating">
                      <input type="text" class="form-control"
                        id="floatingInputGrid" name="clientEmail" placeholder=""
                        value="" required>
                      <label for="floatingInputGrid">Client Email</label>
                      <div class="invalid-feedback">
                        Please enter an email address
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-3 col-md-6">
                    <div class="form-floating" id="dateimepicker">
                      <input type="date"
                        class="form-control form-control-saledate" id="saledate"
                        name="saleDate" placeholder="" value="" required>
                      <label for="floatingInputGrid">Sale Date</label>
                      <span class="glyphicon glyphicon-calendar"></span>
                      <div class="invalid-feedback">
                        Please select a date
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- Row 3 -->
            <div class="row">
              <div class="col-lg-12 py-1">
                <div class="row g-2">
                  <div class="col-lg-7">
                    <div class="form-floating">
                      <input type="text" class="form-control"
                        id="floatingInputGrid" name="clientMailingAddress1"
                        placeholder="" value="" required>
                      <label for="floatingInputGrid">Client Mailing Address
                        1</label>
                      <div class="invalid-feedback">
                        Please enter a value
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-5">
                    <div class="form-floating">
                      <input type="text" class="form-control"
                        id="floatingInputGrid" name="clientMailingAddress2"
                        placeholder="" value="" required>
                      <label for="floatingInputGrid">Client Mailing Address
                        2</label>
                      <div class="invalid-feedback">
                        Please enter a value
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-12 py-1">
                <div class="row g-2">
                  <div class="col-lg-6">
                    <div class="form-floating">
                      <input type="text" class="form-control"
                        id="floatingInputGrid" name="clientMailingCity"
                        placeholder="" value="" required>
                      <label for="floatingInputGrid">City</label>
                      <div class="invalid-feedback">
                        Please enter a value
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-2">
                    <%- include ('partials/dropdown', { options:
                      stateArray.map(m=> {
                      return { name: m.state_abbreviation, value: m.state_name }
                      }),
                      name: "clientmailingstate",
                      label: "State"
                      }) -%>
                  </div>
                  <div class="col-lg-2">
                    <div class="form-floating">
                      <input type="number" class="form-control"
                        id="floatingInputGrid" name="clientPostalCode"
                        placeholder="" value="" required>
                      <label for="floatingInputGrid">Zip</label>
                      <div class="invalid-feedback">
                        Please enter a valid postal code (no dashes)
                      </div>
                    </div>
                  </div>

                </div>
              </div>
            </div>
            <!-- Row 4 -->
            <div class="row">
              <div class="col-lg-12 py-1">
                <div class="row g-2">
                  <div class="col-lg-5">
                    <div class="form-floating" id="datetimepicker">

                      <input type="text" class="form-control"
                        id="floatingInputGrid" name="checkPayableTo"
                        placeholder="" value="" required>
                      <label for="floatingInputGrid">Check Payable To</label>
                    </div>
                  </div>
                  <div class="col-lg-3">
                    <div class="form-floating">

                      <input type="date" class="form-control"
                        id="paymentduedate" name="paymentDueDate" placeholder=""
                        value="" required>
                      <label for="floatingInputGrid">Payment Due Date</label>
                      <span class="glyphicon glyphicon-calendar"></span>
                    </div>
                  </div>
                  <div class="col-lg-4">
                    <%- include ('partials/dropdown', { options:
                      salesPersonArray.map(m=> {
                      return { name: m.salesperson_name, value: m.salesperson_id
                      }
                      }),
                      name: "salesPerson",
                      label: "Sales person"
                      }) -%>
                  </div>
                </div>
              </div>
            </div>
            <!-- Row 5 -->
            <div class="row">
              <div class="col-lg-12 py-1">
                <div class="row g-2">
                  <div class="col-lg-4">
                    <div class="form-floating">

                      <input type="number" class="form-control"
                        id="floatingInputGrid" name="hoursStagingBudget"
                        placeholder="" value="0" required>
                      <label for="floatingInputGrid">Hours Staging
                        Budget</label>

                      <div class="invalid-feedback">
                        Please enter a value
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-4">
                    <div class="form-floating">
                      <input type="number" class="form-control"
                        id="floatingInputGrid" name="hoursEstateSaleBudget"
                        placeholder="" value="" required>
                      <label for="floatingInputGrid">Hours Estate Sale
                        Budget</label>
                      <div class="invalid-feedback">
                        Please enter a value
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-4">
                    <div class="form-floating">
                      <input type="number" class="form-control"
                        id="floatingInputGrid" name="grossSalesBudget"
                        onchange="setTwoNumberDecimal(this)" min="0" step="any"
                        placeholder="" value="" placeholder="" value=""
                        required>
                      <label for="floatingInputGrid">Gross Sales Budget</label>
                      <div class="invalid-feedback">
                        Please enter a value
                      </div>
                    </div>
                  </div>


                </div>
              </div>
            </div>
            <!-- Row 6 -->
            <div class="row">
              <div class="col-lg-12 py-1">
                <div class="row g-2">
                  <div class="col-lg-4">
                    <div class="form-floating">
                      <input type="number" class="form-control"
                        id="floatingInputGrid"
                        onchange="setTwoNumberDecimal(this)" min="0" step="any"
                        name="minimumBase" placeholder="" value="" required>
                      <label for="floatingInputGrid">Minimum Base</label>
                      <div class="invalid-feedback">
                        Please enter a value
                      </div>
                    </div>
                  </div>

                  <div class="col-lg-4">
                    <div class="form-floating">
                      <input type="number" class="form-control"
                        id="floatingInputGrid"
                        onchange="setTwoNumberDecimal(this)" min="0" step="any"
                        name="minimumActual" placeholder="" value="" required>
                      <label for="floatingInputGrid">Minimum Actual</label>
                      <div class="invalid-feedback">
                        Please enter a value
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-4">
                    <div class="form-floating">
                      <input type="number" class="form-control"
                        id="floatingInputGrid" name="minimumDiscount"
                        onchange="setTwoNumberDecimal(this)" min="0" step="any"
                        placeholder="" value="" required>
                      <label for="floatingInputGrid">Minimum Discount</label>
                      <div class="invalid-feedback">
                        Please enter a value
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- SALE SETUP (SECTION 2 OF 4) -->
          <div class="card-body p-5 text-center"
            style="background-color: #285880;">
            <div class="row">
              <div class="col-lg-12 py-1">
                <h4 class="input-section" id="sale-setup">Sale Setup</h4>
                <div class="row g-2">

                  <div class="col-lg-4">
                    <div class="form-floating">
                      <input type="number" class="form-control"
                        id="floatingInputGrid" name="hoursStagingActual"
                        placeholder="" value="">
                      <label for="floatingInputGrid">Hours Staging
                        Actual</label>
                      <div class="invalid-feedback">
                        Please enter a value
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-4">
                    <div class="form-floating">
                      <input type="number" class="form-control"
                        id="floatingInputGrid" name="hoursEstateSaleActual"
                        placeholder="" value="">
                      <label for="floatingInputGrid">Hours Estate Sale
                        Actual</label>
                      <div class="invalid-feedback">
                        Please enter a value
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-4">
                    <div class="form-floating">
                      <input type="number" class="form-control"
                        id="floatingInputGrid" name="grossSalesActualClover"
                        onchange="setTwoNumberDecimal(this)" min="0" step="any"
