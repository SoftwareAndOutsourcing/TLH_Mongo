{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "removeComments": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,                         
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ]
}
